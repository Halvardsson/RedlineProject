<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="main.redline.com.redline40.GuessTheNumber"
    android:background="#0a93c9">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Välj svårighetsgrad"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff" />

    <ImageButton
        android:layout_width="400dp"
        android:layout_height="230dp"
        android:id="@+id/imageButtonEasy"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/easy"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:padding="0dp"
        android:scaleType="fitXY" />

    <ImageButton
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="400dp"
        android:layout_height="230dp"
        android:id="@+id/imageButtonHard"
        android:src="@drawable/hard"
        android:padding="0dp"
        android:scaleType="fitXY"
        android:layout_below="@+id/imageButtonEasy"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
